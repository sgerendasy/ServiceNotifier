<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <gradient android:angle="-90" android:startColor="@color/blueText" android:endColor="@color/blueBackgroundDarker"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <solid android:color="@color/blueText"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <gradient android:angle="-90" android:startColor="@color/blueText" android:endColor="@color/blueBackground" />
        </shape>
    </item>
</selector>