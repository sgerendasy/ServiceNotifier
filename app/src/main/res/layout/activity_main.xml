<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/logList">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:background="@color/cardview_light_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/section_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="start"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/appOnButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="AppOn"
                android:src="@drawable/disconnected_logo"
                sothree:layout_constraintDimensionRatio="H,16:9"
                android:maxWidth="80dp"
                android:maxHeight="80dp"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/volumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:text="Volume"
                android:textSize="16sp"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintHorizontal_bias="0.18"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintTop_toBottomOf="@+id/appOnButton" />

            <SeekBar
                android:id="@+id/volumeBar"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="339dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:progressTint="@color/blueText"
                android:thumbTint="@color/blueText"
                android:clickable="true"
                android:max="100"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintTop_toBottomOf="@+id/volumeLabel" />

            <Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                sothree:layout_constraintEnd_toEndOf="@id/volumeBar"
                sothree:layout_constraintStart_toStartOf="@id/volumeBar"
                sothree:layout_constraintTop_toTopOf="@id/volumeBar" />

            <ImageButton
                android:id="@+id/editSoundTextView"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/editsoundbutton"
                android:onClick="SetSoundsButtonClicked"
                android:src="@drawable/set_alert_sounds"
                android:background="@drawable/round_button"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintTop_toBottomOf="@+id/space" />

            <LinearLayout
                android:id="@+id/editSoundsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintTop_toBottomOf="@id/editSoundTextView">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/editSoundButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/cardview_light_background"
                    android:orientation="vertical"
                    sothree:layout_constraintBottom_toBottomOf="parent"
                    sothree:layout_constraintEnd_toEndOf="parent"
                    sothree:layout_constraintStart_toStartOf="parent"
                    sothree:layout_constraintTop_toBottomOf="@+id/editSoundsLinearLayout">


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/mobileButtonsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        sothree:layout_constraintBottom_toTopOf="@id/wifiButtonsLayout"
                        sothree:layout_constraintEnd_toEndOf="parent"
                        sothree:layout_constraintStart_toStartOf="parent"
                        sothree:layout_constraintTop_toTopOf="parent">

                        <ImageButton
                            android:id="@+id/mobile_on_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:onClick="SoundSelectionMade"
                            android:scaleType="fitStart"
                            android:src="@drawable/mobile_on_sound_button"
                            sothree:layout_constraintBottom_toBottomOf="parent"
                            sothree:layout_constraintEnd_toStartOf="@id/mobile_off_button"
                            sothree:layout_constraintHorizontal_chainStyle="packed"
                            sothree:layout_constraintStart_toStartOf="parent"
                            sothree:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/mobile_off_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/mobile_on_button"
                            android:adjustViewBounds="true"
                            android:onClick="SoundSelectionMade"
                            android:scaleType="fitEnd"
                            android:src="@drawable/mobile_off_sound_button"
                            sothree:layout_constraintBottom_toBottomOf="parent"
                            sothree:layout_constraintEnd_toEndOf="parent"
                            sothree:layout_constraintStart_toEndOf="@id/mobile_on_button"
                            sothree:layout_constraintTop_toTopOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/wifiButtonsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        sothree:layout_constraintBottom_toBottomOf="parent"
                        sothree:layout_constraintEnd_toEndOf="parent"
                        sothree:layout_constraintStart_toStartOf="parent"
                        sothree:layout_constraintTop_toBottomOf="@id/mobileButtonsLayout">

                        <ImageButton
                            android:id="@+id/wifi_on_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:onClick="SoundSelectionMade"
                            android:scaleType="fitStart"
                            android:src="@drawable/wifi_on_sound_button"
                            sothree:layout_constraintBottom_toBottomOf="parent"
                            sothree:layout_constraintEnd_toStartOf="@+id/wifi_off_button"
                            sothree:layout_constraintHorizontal_chainStyle="packed"
                            sothree:layout_constraintStart_toStartOf="parent"
                            sothree:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/wifi_off_button"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/wifi_on_button"
                            android:adjustViewBounds="true"
                            android:onClick="SoundSelectionMade"
                            android:scaleType="fitEnd"
                            android:src="@drawable/wifi_off_sound_button"
                            sothree:layout_constraintBottom_toBottomOf="parent"
                            sothree:layout_constraintEnd_toEndOf="parent"
                            sothree:layout_constraintStart_toEndOf="@id/wifi_on_button"
                            sothree:layout_constraintTop_toTopOf="parent" />

                    </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                sothree:layout_constraintBottom_toBottomOf="parent"
                sothree:layout_constraintEnd_toEndOf="parent"
                sothree:layout_constraintStart_toStartOf="parent"
                sothree:layout_constraintTop_toBottomOf="@+id/editSoundsLinearLayout" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <!-- SLIDING LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textSize="16sp"
                android:text="Service Logs"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/logList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
