<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/section_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"

            android:layout_marginEnd="0dp"
            android:gravity="start"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/appOnButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="AppOn"
                android:src="@drawable/disconnected_logo" />


            <TextView
                android:id="@+id/volumeLabel"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:textSize="16sp"
                tools:layout_editor_absoluteY="66dp" />

            <SeekBar
                android:id="@+id/volumeBar"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="344dp"
                android:layout_height="31dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:max="100"
                tools:layout_editor_absoluteY="117dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <ImageButton
                android:id="@+id/editSoundTextView"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:contentDescription="@string/editsoundbutton"
                android:onClick="SetSoundsButtonClicked"
                android:src="@drawable/set_alert_sounds" />

            <LinearLayout
                android:id="@+id/editSoundButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">


                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/mobileButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/mobile_on_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="SoundSelectionMade"
                        android:src="@drawable/mobile_on_sound_button"/>

                    <ImageButton
                        android:id="@+id/mobile_off_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="SoundSelectionMade"
                        android:src="@drawable/mobile_off_sound_button"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/wifiButtonsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/wifi_on_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="SoundSelectionMade"
                        android:src="@drawable/wifi_on_sound_button"/>

                    <ImageButton
                        android:id="@+id/wifi_off_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="SoundSelectionMade"
                        android:src="@drawable/wifi_off_sound_button"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Service Logs"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ListView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
