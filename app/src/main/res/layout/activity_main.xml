<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/section_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"

            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="93dp"
                android:layout_height="34dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="AppOn"
                android:saveEnabled="true"
                android:text="App On" />

            <TextView
                android:id="@+id/volumeLabel"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:text="Volume"
                android:textSize="14sp"
                tools:layout_editor_absoluteY="66dp" />

            <SeekBar
                android:id="@+id/volumeBar"
                style="@android:style/Widget.Material.SeekBar"
                android:layout_width="344dp"
                android:layout_height="31dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:max="100"
                tools:layout_editor_absoluteY="117dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editSoundTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit sound"
                    android:textSize="16sp" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/ChooseSoundTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <android.support.design.widget.TabItem
                        android:id="@+id/mobileOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Mobile On Sound" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/mobileOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Mobile Off Sound" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/wifiOn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Wifi On Sound" />

                    <android.support.design.widget.TabItem
                        android:id="@+id/wifiOff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set Wifi Off Sound" />
                </android.support.design.widget.TabLayout>

                <RadioGroup
                    android:id="@+id/soundSelectionGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SOUNDMobileOnButton"
                        android:onClick="SoundSelected"
                        android:text="@string/MobileOnSound"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SOUNDMobileOffButton"
                        android:onClick="SoundSelected"
                        android:text="@string/MobileOffSound"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SOUNDWifiOnButton"
                        android:onClick="SoundSelected"
                        android:text="@string/WifiOnSound"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SOUNDWifiOffButton"
                        android:onClick="SoundSelected"
                        android:text="@string/WifiOffSound"/>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <!-- SLIDING LAYOUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Service Logs"
                android:gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ListView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
